<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:text="个人信息"
        android:textSize="18dp"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop= "@dimen/y24"
        android:paddingBottom="@dimen/y14"/>


    <ImageView
        android:id="@+id/nav_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x14"
        android:paddingTop="@dimen/y26"
        android:paddingBottom="@dimen/y14"
        android:paddingRight="@dimen/x14"
        android:src="@drawable/ic_nav_back" />



    <View
        android:id="@+id/line"
        android:layout_below="@id/nav_back"
        style="@style/LineHorizontal"
        android:layout_marginTop="@dimen/y5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/person_text"
        android:layout_below="@+id/line"
        android:text="个人资料"
        android:textSize="14dp"
        android:textColor="#999999"
        android:background="@color/colorBg"
        android:paddingLeft="@dimen/x14"
        android:paddingBottom="@dimen/y5"
        android:paddingTop="@dimen/y4"
        android:paddingRight="@dimen/x15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_head"
        android:layout_below="@+id/person_text"
        android:background="@color/colorWrite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改头像"
            android:textColor="#333333"
            android:textSize="16dp"
            android:paddingLeft="@dimen/x14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/change_head"
            android:layout_alignEnd="@+id/change_head"
            android:gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x19"
                android:paddingTop="@dimen/y15"
                android:paddingBottom="@dimen/y15"

                android:src="@drawable/cool" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/x19"
                android:paddingTop="@dimen/y15"
                android:paddingRight="@dimen/x14"
                android:paddingBottom="@dimen/y15"
                android:src="@drawable/ic_me_back" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line3"
        style="@style/Line2"
        android:layout_below="@+id/change_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sex"
        android:background="@color/colorWrite"
        android:layout_below="@+id/line3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/x14"
            android:text="性别"
            android:textColor="#333333"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_me_back"
                android:paddingRight="@dimen/x14"
                android:paddingLeft="@dimen/x19"
                android:paddingBottom="@dimen/y15"
                android:paddingTop="@dimen/y15"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line4"
        style="@style/Line2"
        android:layout_below="@+id/sex"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:id="@+id/name"
        android:layout_below="@+id/line4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="名字"
            android:textSize="16dp"
            android:textColor="#333333"
            android:paddingLeft="@dimen/x14"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是张大大啊"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_me_back"
                android:paddingRight="@dimen/x14"
                android:paddingLeft="@dimen/x19"
                android:paddingBottom="@dimen/y15"
                android:paddingTop="@dimen/y15"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line5"
        style="@style/Line2"
        android:layout_below="@+id/name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:id="@+id/qr_code"
        android:layout_below="@+id/line5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/x14"
            android:text="我的二维码"
            android:textColor="#333333"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:src="@drawable/ic_add_erweima"
        android:layout_gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_me_back"
            android:paddingRight="@dimen/x14"
            android:paddingLeft="@dimen/x19"
            android:paddingBottom="@dimen/y15"
            android:paddingTop="@dimen/y15"/>

    </LinearLayout>
    </LinearLayout>
    <View
       android:id="@+id/line7"
        style="@style/Line2"
        android:layout_below="@+id/qr_code"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:id="@+id/area"
        android:layout_below="@+id/line7">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="地区"
            android:textSize="16dp"
            android:textColor="#333333"
            android:paddingLeft="@dimen/x14"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/x6"
                android:text="广东"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_me_back"
                android:paddingRight="@dimen/x14"
                android:paddingLeft="@dimen/x19"
                android:paddingBottom="@dimen/y15"
                android:paddingTop="@dimen/y15"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line6"
        style="@style/Line2"
        android:layout_below="@+id/area"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:id="@+id/signature"
        android:layout_below="@+id/line6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个性签名"
            android:textSize="16dp"
            android:textColor="#333333"
            android:paddingLeft="@dimen/x14"
            android:paddingTop="@dimen/y20"
            android:paddingBottom="@dimen/y20"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="12"
                android:maxLength="30"
                android:text="谈爱恨，不能潦草，战鼓敲啊敲。这缘分，像一道桥，旌旗飘啊飘。"
                android:gravity="left"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="15dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_me_back"
                android:paddingRight="@dimen/x14"
                android:paddingLeft="@dimen/x19"
                android:paddingBottom="@dimen/y15"
                android:paddingTop="@dimen/y15"/>

        </LinearLayout>
    </LinearLayout>





</RelativeLayout>