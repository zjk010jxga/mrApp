<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:text="隐私设置"
        android:textSize="18dp"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop= "@dimen/y24"
        android:paddingBottom="@dimen/y14"/>



    <ImageView
        android:id="@+id/nav_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x14"
        android:paddingTop="@dimen/y26"
        android:paddingBottom="@dimen/y14"
        android:paddingRight="@dimen/x14"
        android:src="@drawable/ic_nav_back" />



    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/nav_back"
        android:background="@color/div_white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div_tab_bar"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_new_message"
        android:background="@color/colorWrite">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/x14"
            android:text="允许将我推荐给好友"
            android:textColor="#333333"
            android:textSize="16dp"
            />
        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/s_new_message"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector"
            android:paddingRight="@dimen/x14"
            android:paddingLeft="@dimen/x19"
            android:paddingBottom="@dimen/y10"
            android:paddingTop="@dimen/y10"

            />
    </LinearLayout>
    <View
        style="@style/Line2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_send_message"
            android:background="@color/colorWrite">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/x14"
                android:text="谁可以发消息给我"
                android:textColor="#333333"
                android:textSize="16dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_me_back"
                android:paddingRight="@dimen/x14"
                android:paddingLeft="@dimen/x19"
                android:paddingBottom="@dimen/y10"
                android:paddingTop="@dimen/y10"

                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>