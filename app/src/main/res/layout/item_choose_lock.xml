<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/y10"
            android:paddingBottom="@dimen/y10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_lock"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/ic_password"/>

            <TextView
                android:id="@+id/tv_lockId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x18"
                android:text="AGNI2451542"
                android:textColor="#333333"
                android:textSize="14dp" />
            <Button
                android:layout_width="@dimen/x68"
                android:layout_height="@dimen/y24"
                android:layout_gravity="center"
                android:id="@+id/bt_choose"
                android:layout_marginLeft="@dimen/x90"
                android:background="@drawable/bt_authorized_lock"
                android:layout_alignParentRight="true"
                style="?android:attr/borderlessButtonStyle"
                android:text="选择"
                android:textSize="15dp"
                android:textColor="#4770EB"/>
        </LinearLayout>
        <View
            style="@style/Line2"/>
    </LinearLayout>
</RelativeLayout>